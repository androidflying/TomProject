<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_blue"
    android:fitsSystemWindows="true"
    tools:context=".ui.AboutActivity">

    <com.qmuiteam.tom.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/tab_panel_bg"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关于网站"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_14" />

            <com.qmuiteam.tom.widget.textview.QMUILinkTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:lineSpacingMultiplier="1.3"
                android:paddingBottom="4dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="@dimen/dp_4"
                app:qmui_linkBackgroundColor="@color/qmui_config_color_background"
                app:qmui_linkTextColor="@color/app_color_blue"
                android:textSize="@dimen/sp_12"
                android:text="@string/about_website" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:text="关于APP" />

            <com.qmuiteam.tom.widget.textview.QMUILinkTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:lineSpacingMultiplier="1.3"
                android:paddingBottom="4dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="@dimen/dp_4"
                android:textSize="@dimen/sp_12"
                android:text="@string/about_client"
                app:qmui_linkBackgroundColor="@color/qmui_config_color_background"
                app:qmui_linkTextColor="@color/app_color_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:text="关于开发者" />

            <com.qmuiteam.tom.widget.textview.QMUILinkTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:lineSpacingMultiplier="1.3"
                android:paddingBottom="4dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="@dimen/dp_4"
                android:textSize="@dimen/sp_12"
                app:qmui_linkBackgroundColor="@color/qmui_config_color_background"
                app:qmui_linkTextColor="@color/app_color_blue"
                android:text="@string/about_author" />
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>